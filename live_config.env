# Live Mode Configuration for Trading Bot
# This file contains settings for production live trading

# Alpaca API Configuration
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Use paper trading for testing
ALPACA_WEBSOCKET_URL=wss://stream.data.alpaca.markets/v2/iex

# Trading Configuration
TRADING_SYMBOLS=BTC/USD,ETH/USD,AAPL,SPY240920C00500000
UPDATE_INTERVAL_MS=1000  # Update every 1 second
DATA_RETENTION_HOURS=24  # Keep 24 hours of data
STREAM_TYPES=Options,Crypto,News,Stocks

# File Streaming Configuration
MARKET_DATA_DIR=live_data
# Data files for each stream type
CRYPTO_DATA_FILES=crypto_data_btc.json,crypto_data_eth.json
STOCK_DATA_FILES=stock_data_aapl.json
OPTIONS_DATA_FILES=options_data_spy.json
NEWS_DATA_FILES=news_data_aapl.json,news_data_spy.json
MAX_FILE_SIZE_MB=100  # Rotate files when they get too large

# Ollama AI Configuration
DEFAULT_AI_MODEL=tinyllama
ANALYSIS_INTERVAL_SECONDS=30  # Analyze market data every 30 seconds
ALERT_THRESHOLD_PERCENT=5.0   # Alert on 5% price changes

# Server Configuration
LIVE_MODE_PORT=8080
AUTO_RESTART=true
HEALTH_CHECK_INTERVAL_SECONDS=10
MAX_MEMORY_USAGE_MB=512

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=live_trading.log
ERROR_LOG_FILE=live_errors.log
TRADE_LOG_FILE=live_trades.log
